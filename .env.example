# ============================================================================
# LLM-Assisted NoSQL Query Generation - Environment Configuration
# ============================================================================
# Copy this file to .env and replace placeholder values with your actual credentials

# LLM API Configuration
# Get your free API key from: https://console.groq.com
GROQ_API_KEY=gsk_your_groq_api_key_here

# ============================================================================
# MongoDB Configuration
# ============================================================================
# Option 1: MongoDB Atlas (Cloud) - Recommended
# Get connection string from: https://cloud.mongodb.com
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DATABASE=sample_mflix

# Option 2: Local MongoDB (Docker)
# Uncomment these and comment out MONGODB_URI if using local Docker MongoDB
# MONGODB_HOST=localhost
# MONGODB_PORT=27017
# MONGODB_USERNAME=admin
# MONGODB_PASSWORD=adminpass
# MONGODB_DATABASE=test_db
# MONGODB_AUTH_SOURCE=admin

# ============================================================================
# Neo4j Configuration
# ============================================================================
# For Docker: docker run -d --name neo4j -p 7474:7474 -p 7687:7687 \
#   -e NEO4J_AUTH=neo4j/password123 neo4j:5.14
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password123

# ============================================================================
# Redis Configuration
# ============================================================================
# For Docker: docker run -d --name redis -p 6379:6379 redis:7.2-alpine
REDIS_URI=redis://:redispass123@localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redispass123
REDIS_DB=0

# ============================================================================
# HBase Configuration
# ============================================================================
# For Docker: docker run -d --name hbase -p 9090:9090 -p 16010:16010 \
#   harisekhon/hbase:latest
HBASE_URI=hbase+thrift://localhost:9090?protocol=binary
HBASE_HOST=localhost
HBASE_PORT=9090
HBASE_THRIFT_PROTOCOL=binary

# ============================================================================
# RDF/Apache Jena Fuseki Configuration
# ============================================================================
# For Docker: docker run -d --name fuseki -p 3030:3030 \
#   -e ADMIN_PASSWORD=admin123 stain/jena-fuseki:latest
FUSEKI_ENDPOINT=http://localhost:3030
FUSEKI_DATASET=ds
FUSEKI_USERNAME=admin
FUSEKI_PASSWORD=admin123

# ============================================================================
# Application Configuration
# ============================================================================
LOG_LEVEL=INFO
MAX_QUERY_RESULTS=100
QUERY_TIMEOUT=30

# ============================================================================
# MCP Server Configuration
# ============================================================================
MCP_SERVER_TIMEOUT=60
MCP_MAX_RETRIES=3
